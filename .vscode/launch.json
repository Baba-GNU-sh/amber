    "version": "0.2.0",
    "configurations": [
        {
            "name": "Amber (Run)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/current/amber",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/current",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Amber (Attach)",
